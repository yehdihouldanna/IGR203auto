<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="390dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textIntro"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="Entrez la ville ou le code postal; appuyez sur &quot;continuer&quot; pour taper l'adresse "
            android:textSize="18sp" />

        <EditText
            android:id="@+id/fillText"
            android:layout_width="match_parent"
            android:layout_height="144dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/confirmButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshapestyle"
                android:text="Continuer" />

            <Button
                android:id="@+id/myList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/buttonshapestyle"
                android:text="Ma liste" />

            <ImageButton
                android:id="@+id/returnmenu"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/buttonshapestyle"
                app:srcCompat="@android:drawable/ic_menu_revert"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"
                tools:layout_editor_absoluteX="671dp"
                tools:layout_editor_absoluteY="225dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>